@model EagleFlow.Models.ViewModels.DocumentLookupViewModel
@{
    ViewData["Title"] = "Retrieve PDF";
}

<div class="row justify-content-center">
    <div class="col-lg-7">
        <h1 class="h3 mb-3">PDF Document Retrieval</h1>
        <p class="text-muted">Enter your document number to view or download the PDF.</p>

        @if (TempData["Error"] is string error)
        {
            <div class="alert alert-danger">@error</div>
        }

        <form asp-action="Search" method="post" class="card card-body shadow-sm">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
            <div class="mb-3">
                <label asp-for="DocumentNumber" class="form-label"></label>
                <input asp-for="DocumentNumber" class="form-control" placeholder="e.g., DOC-8F4K92X7Q" />
                <span asp-validation-for="DocumentNumber" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">View Document</button>
        </form>

        <div class="mt-3">
            <small class="text-muted">Direct download endpoint: <code>/Public/Download/{documentNumber}</code></small>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
